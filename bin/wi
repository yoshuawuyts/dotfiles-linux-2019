#!/bin/sh

# whois
#   Version: 1.0.0
#   Author: Yoshua Wuyts <yoshuawuyts@gmail.com>
#   License: MIT

# print usage information
usage() {
cat << EOF
  Usage: $0 <domain>

  Options:

    -h, --help  output usage information

  Examples:

    $ wi google.com
EOF
}

# assert arguments
[ $# -ne 1 ] && usage && exit 1

# switch arguments
case $1 in 
  -h|--help) usage; exit;;
esac

readonly server='geektools.com'
readonly domain=$1

# query whois server
whois -h $server "$domain"
