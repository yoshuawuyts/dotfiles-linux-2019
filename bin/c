#!/bin/sh

test -z "$1"
if [ "$?" -eq 0 ]; then
  echo "$1"
  printf 'Usage: c <user/repo>\n'
  exit 1
fi

user="$(echo "$1" | sed 's|/.*||')"
repo="$(echo "$1" | sed 's|.*/||')"
projectdir="$PROJECTS/$1"
userdir="$PROJECTS/$user"

test -z "$PROJECTS"
if [ "$?" -eq 0 ]; then
  printf 'PROJECTS env var was not set, exiting\n'
  exit 1
fi

boot_project () {
  cd "$projectdir" || exit 1
  mx
}

clone_project () {
  if [ ! -d "$userdir" ]; then
    mkdir "$userdir"
  fi
  cd "$userdir" || exit 1
  git clone "git@github.com:$user/$repo.git"
  boot_project
}

if [ -d "$projectdir" ]; then
  boot_project
else
  clone_project
fi
