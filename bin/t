#!/bin/sh

ignore="node_modules"
ignore="$ignore|.git"
ignore="$ignore|build"
ignore="$ignore|coverage"
ignore="$ignore|target"
ignore="$ignore|doc"
ignore="$ignore|.terraform"
ignore="$ignore|dist"
ignore="$ignore|.nyc_output"

# Recursively show all files in a folder
# as a tree
if [ "$1" ]; then
  tree -aAFC --dirsfirst -L 3 -I "$ignore" "$1"
else
  tree -aAFC --dirsfirst -L 3 -I "$ignore"
fi

